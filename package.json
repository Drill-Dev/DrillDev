{
	"name": "drilldev",
	"version": "1.0.0",
	"repository": "git@github.com:Drill-Dev/DrillDev.git",
	"author": "DrillDev <contact@drilldev.com>",
	"license": "AGPL-3.0",
	"private": true,
	"scripts": {
		"dev:backend": "yarn workspace backend dev",
		"dev:frontend": "yarn workspace frontend dev",
		"prepare": "husky install"
	},
	"workspaces": [
		"frontend",
		"backend"
	],
	"devDependencies": {
		"@commitlint/cli": "^13.1.0",
		"@commitlint/config-conventional": "^13.1.0",
		"eslint": "^7.32.0",
		"husky": "^7.0.1",
		"lint-staged": "^11.1.2",
		"prettier": "^2.3.2",
		"stylelint": "^13.13.1"
	},
	"lint-staged": {
		"frontend/**/*.{js,ts,vue}": [
			"yarn workspace frontend lint",
			"yarn workspace frontend prettier",
			"git add"
		],
		"backend/**/*.{js,ts}": [
			"yarn workspace backend lint",
			"yarn workspace backend prettier",
			"git add"
		]
	}
}
