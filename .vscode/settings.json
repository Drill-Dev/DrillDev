{
	"files.eol": "\n",
	"python.formatting.provider": "yapf",
	"python.formatting.yapfArgs": [
		// Tabs > Spaces (we're literally only using yapf because it's the only
		// popular Python formatter that supports tabsâ€”yes, that's how much
		// I hate spaces)
		"--style={use_tabs: true}"
	],
	"[python]": {
		"editor.insertSpaces": false
	},
	"eslint.workingDirectories": [
		"./backend",
		"./frontend"
	],
	"cSpell.words": [
		"Drilldash",
		"Drilldashes",
		"Fastify",
		"Kubernetes",
		"Vite",
		"Vite's",
		"hackathon",
		"pnpm"
	],
	"windicss.includeLanguages": {
		"pug": "html"
	}
}