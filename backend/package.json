{
	"name": "backend",
	"version": "1.0.0",
	"description": "The backend for DrillDev.",
	"main": "index.js",
	"private": true,
	"scripts": {
		"start": "ts-node src/app.ts",
		"dev": "ts-node-dev --respawn --transpile-only --exit-child src/app.ts",
		"lint": "eslint --fix --ext .js,.ts --cache --cache-location ../.eslintcache src",
		"prettier": "prettier --write src/**/*.{js,ts}",
		"generate": "prisma generate",
		"migrate": "prisma migrate dev"
	},
	"license": "UNLICENSED",
	"dependencies": {
		"@prisma/client": "2.30.3",
		"bcrypt": "5.0.1",
		"dockerode": "3.3.0",
		"dotenv": "10.0.0",
		"fastify": "3.20.2",
		"fastify-autoload": "3.8.1",
		"fastify-cookie": "5.3.1",
		"fastify-cors": "6.0.2",
		"fastify-multipart": "4.0.7",
		"fastify-plugin": "3.0.0",
		"fs-extra": "10.0.0",
		"http-status-codes": "2.1.4",
		"ioredis": "4.27.9",
		"jszip": "3.7.1",
		"nanoid": "3.1.25",
		"nodemailer": "6.6.3",
		"playwright": "1.14.1",
		"string-argv": "0.3.1",
		"tmp-promise": "3.0.2",
		"tsconfig-paths": "3.11.0",
		"wait-port": "0.2.9"
	},
	"devDependencies": {
		"@commitlint/cli": "13.1.0",
		"@types/bcrypt": "5.0.0",
		"@types/busboy": "0.2.4",
		"@types/dockerode": "3.2.7",
		"@types/fs-extra": "9.0.12",
		"@types/ioredis": "4.27.1",
		"@types/node": "16.7.10",
		"@types/nodemailer": "6.4.4",
		"@types/promise-retry": "1.1.3",
		"eslint-import-resolver-alias": "1.1.2",
		"lint-staged": "11.1.2",
		"prisma": "2.30.3",
		"ts-node": "10.2.1",
		"ts-node-dev": "1.1.8"
	},
	"lint-staged": {
		"src/**/*.{js,ts}": [
			"pnpm lint",
			"pnpm prettier"
		]
	}
}
