{
	"name": "drilldev",
	"version": "1.0.0",
	"repository": "git@github.com:Drill-Dev/DrillDev.git",
	"author": "DrillDev <contact@drilldev.com>",
	"license": "MIT",
	"private": true,
	"scripts": {
		"dev:backend": "yarn workspace backend dev",
		"dev:frontend": "yarn workspace frontend dev",
		"prepare": "python ./scripts/hooks/prepare.py",
		"prettier": "yarn workspace frontend prettier && yarn workspace backend prettier",
		"lint": "yarn workspace frontend lint && yarn workspace backend lint"
	},
	"workspaces": [
		"frontend",
		"backend"
	],
	"devDependencies": {
		"@commitlint/cli": "13.1.0",
		"@commitlint/config-conventional": "13.1.0",
		"@typescript-eslint/eslint-plugin": "4.30.0",
		"@typescript-eslint/parser": "4.30.0",
		"eslint": "7.32.0",
		"eslint-config-airbnb-base": "14.2.1",
		"eslint-config-prettier": "8.3.0",
		"eslint-plugin-import": "2.24.2",
		"eslint-plugin-simple-import-sort": "7.0.0",
		"eslint-plugin-unicorn": "35.0.0",
		"husky": "7.0.2",
		"lint-staged": "11.1.2",
		"prettier": "2.3.2",
		"stylelint": "13.13.1",
		"typescript": "4.4.2"
	},
	"lint-staged": {
		"frontend/**/*.{js,ts,vue}": [
			"yarn workspace frontend lint",
			"yarn workspace frontend prettier"
		]
	}
}
